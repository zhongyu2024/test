<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.pinhaha.mapper.AppUserPartnerNumMapper">
	<select id="selectByUserId" resultType="com.pinhaha.pojo.AppUserPartnerNum">
		select * from app_user_partner_num where user_id=#{userId}
	</select>
	<update id="changeNumByUserId">
		update app_user_partner_num set parent_num=parent_num + #{num} where user_id=#{userId} and (parent_num + #{num})>=0 
	</update>
</mapper>